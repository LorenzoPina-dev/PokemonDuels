<UserControl x:Class="pokemonDuel.PaginaUtente"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pokemonDuel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" SizeChanged="UserControl_SizeChanged">
    <DockPanel>
        <Grid x:Name="Profilo" Height="40" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Xp: " Grid.Column="0"/>
            <Label Content="{Binding Xp}" Grid.Column="1"/>
            <TextBlock Grid.Column="2" Text="{Binding Username}" x:Name="TxtNome"/>
            <Button Content="CambiaNome" Click="Button_Click" Grid.Column="3"/>
        </Grid>
        <Canvas x:Name="Mano"></Canvas>
    </DockPanel>
</UserControl>
