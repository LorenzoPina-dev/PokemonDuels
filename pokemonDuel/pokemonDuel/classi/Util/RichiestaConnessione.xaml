<UserControl x:Class="pokemonDuel.classi.Util.RichiestaConnessione"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pokemonDuel.classi.Util"
             mc:Ignorable="d" Height="45.455" Width="239.394">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Username" Grid.Column="0" FontSize="30">Pippo</TextBlock>
        <Button x:Name="Accetta" Grid.Column="1" FontSize="30" Click="Accetta_Click">V</Button>
        <Button x:Name="Nega" Grid.Column="2" FontSize="30" Click="Nega_Click">X</Button>
    </Grid>
</UserControl>
